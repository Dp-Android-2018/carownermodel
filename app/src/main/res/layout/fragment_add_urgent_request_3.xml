<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data></data>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/relativeLayout"
    android:padding="@dimen/dp15w">


    <TextView
        android:id="@+id/tv_add_urgent_request_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15h"
        android:gravity="center"
        android:text="@string/label_tell_notes"
        android:textColor="@color/colorRed"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_notes"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp120h"
        android:layout_below="@+id/tv_add_urgent_request_title"
        android:layout_marginTop="@dimen/dp10h"
        android:background="@drawable/et_light_red_border_background"
        android:gravity="top"
        android:hint="@string/hint_type_message"
        android:textSize="@dimen/sp12"
        android:inputType="text|textMultiLine"
        android:orientation="vertical"
        android:padding="@dimen/dp5w" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="@dimen/dp130w"
        android:layout_height="@dimen/dp30h"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tv_add_urgent_request_splitter"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp30h"
        android:background="@drawable/btn_red_border_background"
        android:text="@string/action_next"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />
</RelativeLayout>
</layout>
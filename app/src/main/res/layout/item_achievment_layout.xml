<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data> </data>
    <android.support.v7.widget.CardView
        android:id="@+id/cv_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp10h"
        app:cardCornerRadius="@dimen/dp6w">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhiteLevel3">


            <TextView
                android:id="@+id/tv_achievment_title"
                android:layout_marginTop="@dimen/dp5h"
                android:layout_marginStart="@dimen/dp5h"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp10_5"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="@color/darkbluecolor"
                android:layout_alignParentTop="true"
                android:lineSpacingExtra="8.3sp"
                android:gravity="center_horizontal"
                android:text=""
                />

            <TextView
                android:id="@+id/tv_achievment_date"
                android:layout_marginTop="@dimen/dp5h"
                android:layout_marginEnd="@dimen/dp5h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp7_5"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="@color/colorgraydark"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:lineSpacingExtra="11.7sp"
                android:gravity="center_horizontal"
                android:text=""
                />

            <LinearLayout
                android:id="@+id/ll_images"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp130h"
                android:layout_below="@+id/tv_achievment_title"
                android:layout_marginTop="@dimen/dp5h"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginStart="@dimen/dp5h"
                android:layout_marginEnd="@dimen/dp5h">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/dp2h">
                <ImageView
                    android:id="@+id/iv_before"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="@string/before"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:textSize="@dimen/sp10_5"
                        android:textColor="@color/colorWhiteLevel3"
                        android:background="#80000000"
                        android:padding="@dimen/dp5h"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp2h">
                    <ImageView
                        android:id="@+id/iv_after"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="@string/after"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:textSize="@dimen/sp10_5"
                        android:textColor="@color/colorWhiteLevel3"
                        android:background="#80000000"
                        android:padding="@dimen/dp5h"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_images"
                android:textSize="@dimen/sp9"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="@color/colorDarkGray"
                android:layout_marginStart="@dimen/dp5h"
                android:layout_marginEnd="@dimen/dp5h"
                android:layout_marginTop="@dimen/dp2h"
                android:layout_marginBottom="@dimen/dp5h"
                android:lineSpacingExtra="3.3sp"
                android:text=""
                android:id="@+id/tv_achievment_desc"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data></data>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteLevel3"
    android:id="@+id/ll_container"
    android:orientation="vertical">
    <include layout="@layout/toolbar_layout"
        android:id="@+id/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="@dimen/dp41w"
        android:layout_marginTop="@dimen/dp18w"
        android:layout_marginStart="@dimen/dp16w"
        android:layout_marginEnd="@dimen/dp16w"
        android:background="@drawable/rounded_relative_red_layout">


        <TextView
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp41w"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/tv_rounded_red_corner"
            android:gravity="center"
            android:text="@string/typing"
            android:textColor="@color/colorWhiteLevel3"
            android:textSize="@dimen/sp13_5"/>

        <TextView
            android:id="@+id/tv_voice_notes"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp41w"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/voicE_notes"
            android:textColor="@color/colorWhiteLevel3"
            android:textSize="@dimen/sp13_5"/>

    </LinearLayout>

    <include layout="@layout/fragment_add_urgent_request_3"
        android:id="@+id/layout_notes"/>
    <include layout="@layout/fragment_add_urgent_request_4"
        android:id="@+id/layout_voice_notes" />
</LinearLayout>
</layout>
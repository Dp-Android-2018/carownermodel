<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/img_menu_header" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/dp100w"
        android:layout_height="@dimen/dp100w"
        android:layout_marginTop="-50dp"
        android:src="@drawable/img_temp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp2h"
        android:gravity="center"
        android:text="Baha Galal"
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp2h"
        android:gravity="center"
        android:text="weza@gmail.com"
        android:textColor="@color/colorRed"/>

</LinearLayout>
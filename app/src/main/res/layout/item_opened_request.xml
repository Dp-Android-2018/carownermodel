<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tv_top_border_background"
        android:gravity="center"
        android:padding="@dimen/dp5w"
        android:text="@string/label_work_shop_offer"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp120h"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp120h"
            android:scaleType="centerCrop"
            android:src="@drawable/img_temp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5h"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/label_average_price"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp12"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5h"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/label_average_price"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp12"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5h"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/label_average_price"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp12"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp5w">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/label_average_price"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorBlue" />

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            style="@style/Widget.MaterialRatingBar.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp5w"
            android:layout_toStartOf="@+id/tv_opened_request_rate" />

        <TextView
            android:id="@+id/tv_opened_request_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp5w"
            android:text="(3.0) rate"
            android:textColor="@color/colorBlue" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp2w"
        android:background="@drawable/view_dashed_background" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp5w"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
        android:textColor="@color/colorBlue" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp2w"
        android:background="@drawable/view_dashed_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp1w"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5h"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/label_average_price"
            android:textColor="@color/colorDarkGray2"
            android:textSize="@dimen/sp12"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5h"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/label_average_price"
            android:textColor="@color/colorDarkGray2"
            android:textSize="@dimen/sp12"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5h"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/label_average_price"
            android:textColor="@color/colorDarkGray2"
            android:textSize="@dimen/sp12"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp2w"
        android:background="@drawable/view_dashed_background" />
</LinearLayout>
